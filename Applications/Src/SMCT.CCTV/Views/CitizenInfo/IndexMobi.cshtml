        $("#modalEdit").modal('show')

		return;
	}
	function fnModalRemove(e) {
		$(".modal").modal('hide');
		// alert('try to show remove modal')
		//$("#lblRemoveCitizenNo").html($(e).attr('data-citizenno');
		$("#modalRemove .modal-footer").css('display', 'none');

