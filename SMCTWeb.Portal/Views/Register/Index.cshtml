@model SMCTPortal.Model.SMPeople.tbPeople;




<head>
    <title>Smart People</title>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
    <style>
        * {
            box-sizing: border-box;
        }

        .canvas {
            width: 766px;
            height: 800px;
            margin: 0 auto;
            position: relative;
        }

        .button {
            width: 100px;
            height: 100px;
            border-radius: 16px;
            border: double 2px transparent;
            background-image: linear-gradient(white, white), linear-gradient(to right bottom, #38F1C5, #1EB7FB);
            background-origin: border-box;
            background-clip: content-box, border-box;
            border: double 3px transparent;
            position: absolute;
            z-index: 999;
            transition: all 0.3s;
        }

            .button:hover {
                cursor: pointer;
                background-image: linear-gradient(white, white), linear-gradient(to right bottom, #1EB7FB, #534ce8);
                box-shadow: 0 0 8px rgba(83, 76, 232, 0.3);
            }

                .button:hover h5 {
                    color: #534ce8;
                }

            .button img {
                width: 60px;
                height: 60px;
                margin: 0 auto;
                display: block;
            }

            .button h5 {
                text-align: center;
                font-weight: normal;
                font-size: 12px;
                vertical-align: cneter;
                line-height: 36px;
                margin: 0;
                color: #1EB7FB;
            }

            .button a {
                width: 100%;
                height: 100%;
                position: absolute;
                left: 50%;
                top: 50%;
                transform: translate(-50%, -50%);
            }

        .internet {
            /*  left: calc((766px - 100px)/2); */
            left: 100px;
            top: calc((800px - 500px)/2 - 100px/2);
        }

        .end_user {
            top: calc(800px/2 - 100px/2);
            left: calc((766px - 500px)/2 - 100px*1.5);
        }

        .dns {
            top: calc(800px/2 - 100px/2);
            left: calc((766px - 500px)/2 + 100px*0.3);
        }

        .multi_cdn {
            left: calc((766px - 100px)/2);
            top: calc((800px - 500px)/2 - 100px/2 + 500px/3);
        }

        .cdn {
            left: calc((766px - 100px)/2);
            top: calc((800px - 500px)/2 - 100px/2 + 500px/3*2);
        }

        .cyber_security {
            top: calc(800px/2 - 100px/2);
            left: calc((766px - 500px)/2 + 500px - 100px*1.3);
        }

        .origin {
            top: calc(800px/2 - 100px/2);
            left: calc((766px - 500px)/2 + 500px + 100px*0.5);
        }

        .cyber_attack {
            top: calc((800px - 500px)/2 + 500px/4*3 - 100px/2);
            left: calc();
            left: calc((766px - 500px)/2 + 500px - 100px*0.9);
        }

        .cyber_monitoring {
            top: calc((800px - 500px)/2 + 500px/4*3 - 100px/2);
            left: calc((766px - 500px)/2 - 100px*0.2);
        }

        .circle {
            width: 500px;
            height: 500px;
            border: double 2px transparent;
            background-image: linear-gradient(white, white), linear-gradient(to right bottom, #38F1C5, #1EB7FB);
            background-origin: border-box;
            background-clip: content-box, border-box;
            border-radius: 50%;
            position: absolute;
            left: 50%;
            top: 50%;
            transform: translate(-50%, -50%);
            opacity: 0.2;
            overflow: hidden;
        }

        .h_line {
            width: 100%;
            height: calc(500px/2);
            border: double 2px transparent;
            background-image: linear-gradient(white, white), linear-gradient(to right bottom, #38F1C5, #1EB7FB);
            background-origin: border-box;
            background-clip: content-box, border-box;
            position: absolute;
            left: 50%;
            top: 50%;
            transform: translate(-50%, -50%);
        }

        .arc_1, .arc_2 {
            width: calc(500px*2);
            height: calc(500px*2);
            border: 1px solid #1EB7FB;
            border-radius: 50%;
            position: absolute;
            top: -50%;
        }

        .arc_1 {
            left: calc(500px/3);
        }

        .arc_2 {
            right: calc(500px/3);
        }

        .diagram {
            width: calc(500px/3);
            height: calc(500px/3);
            border: double 2px transparent;
            background-image: linear-gradient(white, white), linear-gradient(to right bottom, #38F1C5, #1EB7FB);
            background-origin: border-box;
            background-clip: content-box, border-box;
            position: absolute;
            left: 50%;
            top: 50%;
            transform: translate(-50%, -50%);
            border-radius: 40px;
            border: double 10px transparent;
            background-image: linear-gradient(white, white), linear-gradient(to right, #38F1C5, #1EB7FB);
        }

            .diagram:before {
                content: '';
                width: calc(500px/2);
                height: 10px;
                background: #38F1C5;
                position: absolute;
                left: calc(-500px/2);
                top: 50%;
                transform: translateY(-50%);
            }

            .diagram:after {
                content: '';
                width: calc(500px/2);
                height: 10px;
                background: #1EB7FB;
                position: absolute;
                left: calc(500px/3 - 11px);
                top: 50%;
                transform: translateY(-50%);
            }

    </style>
</head>
<body>
    
    <div class="row">

        <div class="col-sm-10">

           

            <div class="container py-5" id="perdata">

                <div class="card">
                    <div class="card-header bg-info text-white">
                        <h4 class="text-uppercase text-center">Smart People Data</h4>
                    </div>


                    <div class="card-body">
                        <form action="@Url.Action("Create")">
                            <div class="form-row">
                                <div class="col-md-6">
                                    <label>Citizen No</label>
                                    <input type="text" asp-for="citizenNo" placeholder="CitizenNo" class="form-control" />
                                </div>
                               
                            </div>
                            <div class="form-row">
                                <div class="col-md-6">
                                    <label>First Name</label>
                                    <input type="text" asp-for="Name" placeholder="First Name" class="form-control" />
                                </div>
                                <div class="col-md-6">
                                    <label>Last Name</label>
                                    <input type="text" asp-for="SureName" placeholder="Last Name" class="form-control" />
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col-md-6">
                                    <label>Date of Birth</label>
                                    <input type="date" asp-for="DateOfBirth" class="form-control" />
                                </div>
                                <div class="col-md-6">
                                    <label>Address</label>
                                    <input type="text" asp-for="Address" placeholder="Last Name" class="form-control" />

                                </div>
                            </div>
                      
                            <div style="margin-top:15px;">

                                <button type="submit" class="btn btn-primary rounded-0">บันทึก</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
             
             
             

        </div>
    </div>

    <script>
        $(document).ready(function () {
            $("#modalConsent").modal('show');
        });
    </script>


    <div class="modal fade" id="modalConsent" tabindex="-1" role="dialog" aria-labelledby="popupMessageLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content" style="width:800px">
                <div class="modal-header">
                    <h5 class="modal-title" id="popupMessageLabel">Update Personal Info</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                @*  @model SMCTPortal.Model.SMPeople.tbPeople *@


                <form action="@Url.Action("CreateConcent")">
                    <div class="modal-body" style="text-align:center;">

                        <div class="container">

                            <input type="hidden" asp-for="citizenNo" />


                            <div class="form-row">
                              <p>
                                    ขอให้ความยินยอมในการเก็บรวบรวม ใช้ และเปิดเผยข้อมูลส่วนบุคคลของข้าพเจ้า 
                                    
                                        ทั้งนี้ ก่อนการแสดงเจตนา ข้าพเจ้าได้อ่านรายละเอียดจากเอกสารชี้แจงข้อมูล หรือได้รับคำอธิบายจากสมาคม
                                    ผู้ประเมินค่าทรัพย์สินแห่งประเทศไทย ถึงวัตถุประสงค์ในการเก็บรวบรวม ใช้หรือเปิดเผย (“ประมวลผล”)
                                    ข้อมูลส่วนบุคคล และมีความเข้าใจดีแล้ว
                                    ข้าพเจ้าให้ความยินยอมด้วยความสมัครใจ ปราศจากการบังคับหรือชักจูง และข้าพเจ้าทราบ
                                    ว่าข้าพเจ้าสามารถถอนความยินยอมนี้เสียเมื่อใดก็ได้เว้นแต่ในกรณีมีข้อจำกัดสิทธิตามกฎหมายหรือตาม
                                    เงื่อนไขข้อตกลงระหว่างข้าพเจ้ากับ “สมาคม” ในส่วนที่ยังเป็นประโยชน์กับข้าพเจ้าอยู่
                                    กรณีที่ข้าพเจ้าประสงค์จะขอถอนความยินยอม ข้าพเจ้าทราบว่าการถอนความยินยอมจะมี
                                    ผลทำให้ไม่สามารถดำรงสถานะของการของการเป็นสมาชิกของ”สมาคม” หรือ ข้าพเจ้าอาจไม่ได้รับความ
                                    สะดวกในการใช้บริการของ”สมาคม” หรือ ไม่สามารถเข้าถึงฟังก์ชันการใช้บริการบางอย่างของ”สมาคม”ได้
                                    และข้าพเจ้าทราบว่าการถอนความยินยอมดังกล่าว ไม่มีผลกระทบต่อการประมวลผลข้อมูลส่วนบุคคลที่ได้
                                    ดำเนินการเสร็จสิ้นไปแล้วก่อนการถอนความยินยอม

                              </p>
                            </div>



                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" modal-dismiss="modal" class="btn btn-info">ยืนยัน</button>
                        <button type="button" modal-dismiss="modal" class="btn btn-warning">ยกเลิก</button>
                        @*     <button type="button" class="btn btn-dark" data-dismiss="modal">Close</button>
                        *@
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>


